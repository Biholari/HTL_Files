<Window x:Class="Achterbahn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Achterbahn"
        mc:Ignorable="d"
        Title="Achterbahn" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label Content="Anzahl der Passagiere:"/>
        <Slider x:Name="slider" Minimum="0" Maximum="100" VerticalAlignment="Top" TickFrequency="1" IsSnapToTickEnabled="True"/>
        <Label Content="{Binding ElementName=slider, Path=Value}"/>

        <Label Content="Kapazität des Wagens:" Margin="0,20,0,0"/>
        <TextBox x:Name="WagonBox" Width="100"/>

        <Button Content="Start" Width="100" Margin="0,20,0,0" Click="StartButton_Click"/>

        <Label Content="Aktueller Zustand:" Margin="0,20,0,0"/>
        <TextBlock x:Name="StatusTextBlock" Text="Warten auf Start..." TextWrapping="Wrap" Margin="0,10,0,0"/>
    </StackPanel>
</Window>