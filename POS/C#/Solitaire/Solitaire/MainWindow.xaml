<Window x:Class="Solitaire.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Solitaire"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid PreviewMouseMove="Grid_PreviewMouseMove" PreviewDragOver="Grid_PreviewDragOver">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" Background="Beige" BorderThickness="2" Grid.Column="0" Grid.Row="0" AllowDrop="True" Drop="Border_Drop"/>
        <Border BorderBrush="Black" Background="LightGray" BorderThickness="2" Grid.Column="1" Grid.Row="0"/>
        <Border BorderBrush="Black" Background="Beige" BorderThickness="2" Grid.Column="0" Grid.Row="1" AllowDrop="True" Drop="Border_Drop"/>
        <Border BorderBrush="Black" Background="Beige" BorderThickness="2" Grid.Column="1" Grid.Row="1" AllowDrop="True" Drop="Border_Drop"/>
        <Ellipse Stroke="Red" StrokeThickness="2" Fill="Red" PreviewMouseLeftButtonDown="Ellipse_MouseLeftButtonDown"></Ellipse>

    </Grid>
</Window>
